{
    "name": "yeswiki/extension-newbazartemplates",
    "license": "AGPL-3.0",
    "type": "yeswiki-extension",
    "archive": {
        "exclude": [
            "/node_modules",
            "/yarn-error.log",
            "/tests",
            "/*.zip",
            "/*.tar"
        ]
    },
    "require": {
        "php": "^7.3.0 || ^8.1"
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "7.3"
        },
        "platform-check": true,
        "sort-packages": true
    },
    "scripts": {
        "git-get-timestamp": "git log --pretty=\"%cd\" --date=short -1 .",
        "git-last-tag": "git describe --tags `git rev-list --tags --max-count=1`",
        "local-archive": [
            "@set-version",
            "@composer archive --format=zip"
        ],
        "pre-archive-cmd": "@set-version",
        "set-version": "YesWiki\\Newbazartemplates\\lib\\ComposerHelper::setVersionName"
    },
    "autoload": {
        "psr-4": {
        "YesWiki\\Newbazartemplates\\lib\\": "lib"
        }
    },
    "version": "2022-10-02-1"
}
