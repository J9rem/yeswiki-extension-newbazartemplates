{
    "name": "yeswiki/extension-newbazarteemplates",
    "license": "AGPL-3.0",
    "type": "yeswiki-extension",
    "archive": {
        "exclude": [
            "/node_modules",
            "/yarn-error.log",
            "/tests",
            "/*.zip",
            "/*.tar"
        ]
    },
    "require": {
        "php": "^7.3.0 || ^8.1"
    },
    "config": {
        "optimize-autoloader": true,
        "platform": {
            "php": "7.3"
        },
        "platform-check": true,
        "sort-packages": true
    },
    "scripts": {
        "git-get-timestamp": "git log --pretty=\"%cd\" --date=short -1 .",
        "git-get-commit-number-for-day": [
            "day=@git-get-timestamp",
            "echo day"
        ],
        "git-last-tag": "git describe --tags `git rev-list --tags --max-count=1`",
        "local-archive": "@composer archive --format=zip"
    }
}